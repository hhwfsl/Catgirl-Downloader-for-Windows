<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.ThemeDictionaries>
        <!--  Light 主题  -->
        <ResourceDictionary x:Key="Light">
            <Color x:Key="ToolButtonHoverColor">LightBlue</Color>
            <SolidColorBrush x:Key="IconButtonForeColor">Black</SolidColorBrush>
            <!--  三大按钮  -->
            <SolidColorBrush x:Key="WindowControlCloseEllipseColor">#FF605C</SolidColorBrush>
            <SolidColorBrush x:Key="WindowControlMinimizeEllipseColor">#FFBD44</SolidColorBrush>
            <SolidColorBrush x:Key="WindowControlMaximizeEllipseColor">#00CA4E</SolidColorBrush>

        </ResourceDictionary>

        <!--  Dark 主题  -->
        <ResourceDictionary x:Key="Dark">
            <Color x:Key="ToolButtonHoverColor">MediumPurple</Color>
            <SolidColorBrush x:Key="IconButtonForeColor">#F2F2F2</SolidColorBrush>
            <!--  三大按钮  -->
            <SolidColorBrush x:Key="WindowControlCloseEllipseColor">#FF5F57</SolidColorBrush>
            <SolidColorBrush x:Key="WindowControlMinimizeEllipseColor">#FFBC2E</SolidColorBrush>
            <SolidColorBrush x:Key="WindowControlMaximizeEllipseColor">#28C940</SolidColorBrush>

        </ResourceDictionary>
    </ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
